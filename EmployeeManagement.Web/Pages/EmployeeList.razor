@page "/"
@inherits EmployeeListBase

<h4>Employee List</h4>

<div class="d-flex flex-row flex-wrap p-1">
    @if (Employees == null)
    {
        <div class="spinner-grow">

        </div>
    }
    else
    {
        @foreach (var employee in Employees)
        {
            <div class="card m-3" style="min-width:16rem; max-width:30%">
                <div class="card-header">
                    <h4>@employee.FirstName @employee.LastName </h4>
                </div>

                <img src="@employee.PhotoPath" class="card-img-top" />

                <div class="card-footer text-center">
                    <a href="@($"employeedetails/{employee.EmployeeID}")" class="btn btn-primary m-1">View</a>
                    <a href="#" class="btn btn-success m-1">Edit</a>
                    <a href="#" class="btn btn-warning m-1">Delete</a>
                </div>

            </div>
        }
    }
</div>

