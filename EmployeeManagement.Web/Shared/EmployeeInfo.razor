<div class="card m-3" style="min-width:16rem; max-width:30%">
    <div class="card-header">
        <input type="checkbox" @onchange="SelectionChanged"/>

        <h4>@Employee.FirstName @Employee.LastName </h4>
    </div>

    <img src="@Employee.PhotoPath" class="card-img-top" />

    @if (ShowFooter)
    {
        <div class="card-footer text-center">
            <NavLink href="@($"/details-employee/{Employee.EmployeeID}")" class="btn btn-primary m-1" Match="NavLinkMatch.All">View</NavLink>
            <NavLink href="@($"/editemployee/{Employee.EmployeeID}")" class="btn btn-success m-1" Match="NavLinkMatch.All">Edit</NavLink>
            <NavLink href="#" class="btn btn-warning m-1">Delete</NavLink>
        </div>

    }
</div>
<ConfirmDialogBox @ref="DeleteConfirmation"></ConfirmDialogBox>

